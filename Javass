using System;
using System.Collections.Generic;
using System.Linq;

class Program
{
    static void Main(string[] args)
    {
        int[] myList = { 1, 2, 3 };
        var combinations = GetCombinations(myList);

        foreach (var combination in combinations)
        {
            Console.WriteLine(string.Join(",", combination));
        }
    }

    static List<int[]> GetCombinations(int[] list)
    {
        var combinations = new List<int[]>();
        GenerateCombinations(list, 0, new int[list.Length], combinations);
        return combinations;
    }

    static void GenerateCombinations(int[] list, int index, int[] buffer, List<int[]> combinations)
    {
        if (index == list.Length)
        {
            combinations.Add(buffer.ToArray());
            return;
        }

        for (int i = 0; i < list.Length; i++)
        {
            if (!buffer.Contains(list[i]))
            {
                buffer[index] = list[i];
                GenerateCombinations(list, index + 1, buffer, combinations);
            }
        }
    }
}
