Sub AddImageToWordDoc()

    ' Select the image file to add
    Dim strImagePath As String
    strImagePath = Application.GetOpenFilename("Image Files (*.jpg;*.jpeg;*.png;*.bmp),*.jpg;*.jpeg;*.png;*.bmp")
    
    ' Check if an image was selected
    If strImagePath = "False" Then
        MsgBox "No image file selected."
        Exit Sub
    End If
    
    ' Create a new Word document
    Dim objWord As Object
    Set objWord = CreateObject("Word.Application")
    objWord.Visible = True
    Dim objDoc As Object
    Set objDoc = objWord.Documents.Add
    
    ' Insert the image into the Word document
    objDoc.InlineShapes.AddPicture Filename:=strImagePath, LinkToFile:=False, SaveWithDocument:=True
    
    ' Clean up
    Set objDoc = Nothing
    objWord.Quit
    Set objWord = Nothing

End Sub
